#include <iostream>
#include <fstream>
using namespace std;

int main()
{
  ofstream output;

  // Create a file
  output.open("limbo.txt");

  // Write two lines
  output << "mina" << " " << "T" << " " << "Smith" 
    << " " << 90 << endl;
  output << "jeck" << " " << "K" << " " << "Jones" 
    << " " << 85 << endl;

  output.close();

  cout << "Done" << endl;

  return 0;
}




